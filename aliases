function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		cd -- "$cwd"
	fi
	\rm -f -- "$tmp"
}

function em { 
emacsclient --create-frame --alternate-editor="" $* > /dev/null & 
disown
}

